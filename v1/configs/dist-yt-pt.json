{
  "name": "yttemporal",
  "n_gpu": 8,
  "arch": {
    "type": "TVTS",
    "args": {
      "video_params": {
        "arch_config": "base_patch16_224",
        "num_frames": 16
      },
      "text_params": {
        "model": "distilbert-base-uncased",
        "pretrained": true,
        "input": "text"
      },
      "projection": "minimal",
      "load_checkpoint": "./TVTS_yt_pt.pth"
    }
  },
  "data_loader": [
    {
      "type": "MultiDistTextVideoDataLoader",
      "args": {
        "dataset_name": "YTTemporal",
        "data_dir": "data/YTTemporal",
        "reader": "cv2",
        "shuffle": true,
        "num_workers": 16,
        "batch_size": 24,
        "split": "train",
        "cut": "2M",
        "subsample": 1,
        "text_params": {
          "input": "text"
        },
        "video_params": {
          "input_res": 224,
          "num_frames": 4,
          "loading": "lax"
        }
      }
    }
  ],
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 1e-4,
      "betas": [
        0.9,
        0.999
      ],
      "weight_decay": 0
    }
  },
  "loss": {
    "type": "NormSoftmaxLoss",
    "args": {
    }
  },
  "metrics": [
    "t2v_metrics",
    "v2t_metrics"
  ],
  "trainer": {
    "epochs": 20,
    "max_samples_per_epoch": 1000000,
    "save_dir": "./results/TVTS",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss_0",
    "early_stop": 10,
    "init_val": true,
    "neptune": false
  },
  "visualizer": {
    "type": ""
  }
}